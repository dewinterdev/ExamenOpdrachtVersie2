<Page x:Class="ExamenOpdrachtVersie2.PersonOverviewPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:ExamenOpdrachtVersie2"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PersonOverviewPage" Background="AliceBlue">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button Content="New Person" Name="newPersonBtn" Click="newPersonBtn_Click" />
        <Button Grid.Row="1" Content="Existing Person" Name="ExistingPersonBtn" Click="ExistingPersonBtn_Click" />
    </Grid>
</Page>